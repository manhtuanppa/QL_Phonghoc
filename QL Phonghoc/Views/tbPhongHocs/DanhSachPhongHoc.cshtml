@using System.Threading;
@model IEnumerable<QL_Phonghoc.Models.ClsPhongHoccs>

@{
    ViewBag.Title = "Danh sách phòng học";
}




<div class="col-lg-12">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="panel panel-default">
        <div class="panel-heading">
            Danh sách phòng học
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <!-- Nav tabs -->
            <ul class="nav nav-pills">
                <li class="active">
                    <a href="#home-pills" data-toggle="tab" aria-expanded="true">Cơ sở 1</a>
                </li>
                <li class="">
                    <a href="#profile-pills" data-toggle="tab" aria-expanded="false">Cơ sở 2</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content" style="margin-top:10px">
                <div class="tab-pane fade active in" id="home-pills">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TenPhong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Toa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DienTich)
                            </th>
                            <th width="19%">
                                @Html.DisplayNameFor(model => model.TrangThai)
                            </th>
                            <th>
                                Lớp được phân công
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GhiChu)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenPhong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Toa)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DienTich)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrangThai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LopSudung)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GhiChu)
                                </td>
                                <td>
@if (Thread.CurrentPrincipal.IsInRole("CanBo"))
{
                                    @Html.ActionLink("Thiết bị |", "DanhSachThietBi", "tbThietbis", new { idPhongHoc = item.ID },null)
                                    @Html.ActionLink("Edit |", "Edit", new { id = item.ID })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
}
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <div class="tab-pane fade" id="profile-pills">
                    <p>Chưa có dữ liệu</p>
                </div>
            </div>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

